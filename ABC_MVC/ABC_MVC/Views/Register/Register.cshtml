@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #f4f4f4; /* Light gray background */
            color: #313131; /* Dark grey text color */
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 500px;
            margin: auto;
            padding: 20px;
            background-color: #FFFFFF; /* White background for the form container */
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            color: #5eedab; /* Green color for the title */
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
                color: #313131; /* Dark grey label color */
            }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #9b9b9b; /* Light grey border color */
            border-radius: 4px;
            box-sizing: border-box;
        }

            .form-control:focus {
                border-color: #ff965a; /* Orange border*/
                outline: none;
            }

        .text-danger {
            color: #ff965a; /* Orange color for validation errors */
        }

        .btn-primary {
            background-color: #5eedab; /* Green background for the button */
            border: none;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 4px;
        }

            .btn-primary:hover {
                background-color: #4ec7a0; /* Dark green on hover */
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>@ViewData["Title"]</h2>

        <form asp-action="Register" method="post">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn-primary" />
            </div>
        </form>
    </div>
</body>
</html>

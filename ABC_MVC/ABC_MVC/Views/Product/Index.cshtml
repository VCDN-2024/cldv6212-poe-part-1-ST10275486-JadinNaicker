@model IEnumerable<ABC_MVC.Models.Product>
<br />
<br />
<h2 class="text-center" style="color: #FFFFFF;">Product List</h2>


<div class="d-flex justify-content-center mb-4">
    <a href="https://localhost:7157/Product/Create" class="btn btn-primary" style="background-color: #5eedab; border-color: #5eedab; color: #313131;">Create New Product</a>
</div>

<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm" style="background-color: #313131;">
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="@product.Name" class="card-img-top" />
                    }
                    else
                    {
                        <img src="/images/placeholder.png" alt="Placeholder Image" class="card-img-top" />
                    }
                    <div class="card-body">
                        <h5 class="card-title" style="color: #5eedab;">@product.Name</h5>
                        <p class="card-text" style="color: #9b9b9b;">@product.Description</p>
                        <p class="card-text" style="color: #FFFFFF;"><strong>@product.Price.ToString("C")</strong></p>

                        <form method="post" action="/Product/AddToCart">
                            <input type="hidden" name="productId" value="@product.Id" />
                            <button type="submit" class="btn add-to-cart">Add to Cart</button>
                        </form>

                    </div>
                </div>
            </div>
        }
    </div>
</div>
